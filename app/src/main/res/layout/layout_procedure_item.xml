<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvProcedureName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textColor="@color/colorBlack"
        android:maxWidth="250dp"
        android:maxLines="2"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        tools:text="Carpal Tunnel"/>

    <TextView
        android:id="@+id/tvLinkedToSurgeon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvProcedureName"
        android:layout_marginStart="8dp"
        android:textSize="12sp"
        android:text="@string/tv_linked_surgeons"
        android:textColor="@color/colorGreen"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/tvLinkedSurgeonCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tvLinkedToSurgeon"
        android:layout_toRightOf="@id/tvLinkedToSurgeon"
        android:layout_below="@id/tvProcedureName"
        android:layout_marginStart="2dp"
        android:textColor="@color/colorGreen"
        android:textSize="12sp"
        tools:text="0"
        android:layout_marginLeft="2dp" />

    <TextView
        android:id="@+id/tvNotLinkedToSurgeon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLinkedToSurgeon"
        android:layout_marginStart="8dp"
        android:textSize="12sp"
        android:textColor="@color/colorGreen"
        android:text="@string/tv_not_linked_surgeons"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvNotLinkedSurgeonCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tvNotLinkedToSurgeon"
        android:layout_toRightOf="@id/tvNotLinkedToSurgeon"
        android:layout_below="@id/tvLinkedSurgeonCount"
        android:layout_marginStart="2dp"
        android:textColor="@color/colorGreen"
        android:textSize="12sp"
        tools:text="0"
        android:layout_marginLeft="2dp"/>

    <ImageView
        android:id="@+id/ivArrowRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_arrow_right"
        app:tint="@color/colorLightGray" />
</RelativeLayout>