<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvSurgeonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGreen"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        tools:text="Doe, John"/>

    <TextView
        android:id="@+id/tvProcedureName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:layout_below="@id/tvSurgeonName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:textSize="12sp"
        tools:text="Drain thigh/knee lesion"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/tvStart"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGreen"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:layout_marginEnd="16dp"
        android:text="@string/tv_start"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/tvStartDate"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:layout_alignParentEnd="true"
        android:textSize="12sp"
        android:layout_marginEnd="16dp"
        android:layout_below="@id/tvStart"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        tools:text="11:32 Pm, Thu, Oct 22, 2015"/>

    <TextView
        android:id="@+id/tvEnd"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGreen"
        android:layout_alignParentEnd="true"
        android:textSize="12sp"
        android:layout_marginEnd="16dp"
        android:layout_below="@id/tvStartDate"
        android:text="@string/tv_end"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/tvEndDate"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:layout_alignParentEnd="true"
        android:textSize="12sp"
        android:layout_marginEnd="16dp"
        android:layout_below="@id/tvEnd"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        tools:text="11:32 Pm, Thu, Oct 22, 2015"/>

</RelativeLayout>